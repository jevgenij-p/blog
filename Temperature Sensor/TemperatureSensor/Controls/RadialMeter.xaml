<UserControl
    x:Class="TemperatureSensor.Controls.RadialMeter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="250"
    d:DesignWidth="250">

    <Grid>
        <Grid>
            <Ellipse Height="250" Width="250" Stroke="#FF3E4473" StrokeThickness="7" />
        </Grid>
        <Grid>
            <TextBlock HorizontalAlignment="Center" Text="{Binding Path=Value, Mode=OneWay}" 
                       VerticalAlignment="Center" Foreground="White" FontSize="72" FontFamily="Segoe UI Light"/>

        </Grid>
    </Grid>
</UserControl>
